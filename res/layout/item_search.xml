<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp"
    android:paddingBottom="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border"
        android:orientation="horizontal" >

    <ImageView 
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:id="@+id/iv_blogger"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@drawable/icon3"/>
    <LinearLayout
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView 
            android:drawableLeft="@drawable/blogger"
            android:layout_weight="1"
            android:textSize="17sp"
            android:singleLine="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/blogger"
            android:textColor="@color/dark_nongshu"
            android:id="@+id/tv_title"/>
         <TextView 
             android:layout_marginTop="5dp"
             android:textSize="14sp"
             android:text="2015-09-09  12:32:22"
             android:layout_weight="1"
             android:singleLine="true"
             android:gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGreen"
            android:id="@+id/tv_updated"/>
    </LinearLayout>

    <TextView
        android:gravity="right"
        android:layout_weight="0.70"
        android:id="@+id/tv_postcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/dark_hese"
        android:text="25ç¯‡"
        android:paddingRight="2dp"
        android:textSize="16sp"
         />

	</LinearLayout>
</LinearLayout>
